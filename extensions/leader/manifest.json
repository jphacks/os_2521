{
  "manifest_version": 3,
  "name": "Meet Multi-Video Tap (Popup)",
  "version": "0.4.0",
  "description": "拡張ボタン→ポップアップ内でStart/Stop。Meetページ内の全videoをサムネ表示。",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://meet.google.com/*"],
  "action": { "default_popup": "popup.html", "default_title": "Meet Multi-Video Tap" },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
