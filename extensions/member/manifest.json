{
  "manifest_version": 3,
  "name": "ひとやすみ通信 - Member",
  "version": "1.0.0",
  "description": "リモート会議に、やわらかな休憩を。休憩通知を受信してリフレッシュタイムをお知らせ。",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:8000/*",
    "https://*.up.railway.app/*",
    "https://*.railway.app/*"
  ],
  "icons": {
    "16": "image.png",
    "48": "image.png",
    "128": "image.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ひとやすみ通信 - Member",
    "default_icon": {
      "16": "image.png",
      "48": "image.png",
      "128": "image.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["config.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
